<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	<% if (locals.user) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">TODOS LOS PRODUCTOS DISPONIBLES</h2>
			</div>


			<% for (let i = 0; i < products.length; i++) { %> 
				<div class="col-12 col-sm-6 col-lg-3"> 
				   <section class="product-box">
					   <a href="/product/<%= products[i].id %>">
						   <figure class="product-box_image">
							   <img src="<%= products[i].foto_producto %>" alt=" ">
						   </figure>
						   <article class="product-box_data">
							   <h2> <%= products[i].marca + ' ' + products[i].modelo %> </h2>
							   <h3> Talles disponibles: <%= products[i].talle %></h3>
							   <h3>El buzo se publico el: <%= products[i].fecha_publicacion %> por <a class="link" href="/users/profile/<%= products[i].usuario.id %>"><%=products[i].usuario.nombre +" "+ products[i].usuario.apellido %></a></h3>
							   <p>Comentarios: <%= products[i].comentarios.length %> </p>  
							</article>
					   </a>
				   </section>
				</div>
			<% } %>   
		</div>
	</div>


<%- include('./partials/footer') %>


</body>	
</html>