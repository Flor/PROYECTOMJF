<!DOCTYPE html>
<html lang="es"> 

<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	
	<% if (locals.user) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>



<div> 
	<div>
		<h2>Resultados de tu búsqueda</h2>
	</div>


		<% for(let i=0; i < result.length; i++) { %>
			<div  class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
		
					<div>
						<a href="/product/<%= result[i].id %> ">
							<figure class="product-box_image">
								<img src="<%= result[i].foto_producto %>" alt="<%= result[i].marca %>">
							</figure>
							<article class="product-box_data">
								<p>
								<h2 ><%= result[i].marca %> </h2> 
								</p>
								<p>
								<h3><%= result[i].modelo %> </h3> 
								</p>
								<h4 >Desccripción:  <%= result[i].descripcion %> </h4>
							</article>
							
						</a>
					</div>
					<div>
				
						
						<article class="product-box_data">
							<h4> Creado por: <a class="link" href="/users/profile/<%= result[i].usuario.id %>"><%= result[i].usuario.nombre + " " + result[i].usuario.apellido %> </a></h4>
						</article>
						
					</div>
				</section>
			</div>
		<% } %>
	
		
	 
</div>


<div>
	<%- include('./partials/footer') %>
</div>

</body>

</html>

