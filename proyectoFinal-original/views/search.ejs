<!DOCTYPE html>
<html lang="es"> 

<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	
	<% if (locals.user) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>



<div> 
	<div>
		<h2>Resultados de tu búsqueda</h2>
	</div>


		<% for(let i=0; i < result.length; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
		
					<div>
						<a href="/product/<%= result[i].id %> ">
							<figure class="product-box_image">
								<img src="<%= result[i].foto_producto %>" alt="<%= result[i].marca %>">
							</figure>
							<article class="product-box_data">
								<p>
								<h3 ><%= result[i].marca %> </h3> 
								</p>
								<p>
								<h4 ><%= result[i].modelo %> </h4> 
								</p>
								<h4 >Desccripción:  <%= result[i].descripcion %> </h4>
							</article>
							
						</a>
					</div>
					<div>
				
						<a href="/users/profile/<%= result[i].usuario.id %>">
							<article class="product-box_data">
								<h4 > Creado por: <%= result[i].usuario.nombre %> </h4>
							</article>
						</a>
					</div>
				</section>
			</div>
		<% } %>
	
		
	 
</div>



<%- include('./partials/footer') %>

</body>

</html>

