<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	
	<% if (locals.user) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/<%= usuario.fotodeperfil %> " alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= usuario.nombre %>  <%= usuario.apellido %> 
						<a href="/users/profileEdit/<%= usuario.id %>"> 
							<i class="fas fa-cog"></i>
						</a>

					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li> Productos: <%= usuario.producto.length %> </li>
						<li> Comentarios: <%= usuario.comentario.length %> </li>
					</ul>
				</div>
			</div>
		</div>
	</section>


	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<% for(product of usuario.producto) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= product.id %> ">
							<figure class="product-box_image">
								<img src="<%= product.foto_producto %>" alt="buzo all saints">
							</figure>
							<article class="product-box_data">
								<h2><%= product.modelo %> - <%= product.marca %></h2>
								<p><%= product.descripcion %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->

	<%- include('./partials/footer') %>
	
</body>	
</html>