<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	
	<% if (locals.user) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>

	<!-- product detail -->
	<div class="container products-wrapper">
		
		<div class="d-flex align-items-center">

			<h2 class="products-title"> 
				 Buzo <%= product.marca + ' ' %> Modelo <%= product.modelo %>  
			</h2> 
			<!-- <p class="product-detail-description">
				<a href="/product/productAdd"> Agregar nuevo producto </a>
			</p> -->
		</div>
		<p class="product-detail-description">
			<a href="/product/add"> Agregar nuevo producto </a>
		</p>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<a href="/product/productEdit/<%= product.id %> ">
						<i class="fas fa-edit fa-4x"> </i> 
					</a> 
					<!--<img src="/images/<%=product.product_image %>" >-->
					<img src="<%= product.foto_producto%>" alt="" class="product-detail-img">
					<p class="product-detail-description"> Descripci√≥n: <%= product.descripcion %> </p>
				</article>

				<div class="col-12 col-lg-4">
				
				<section class="comments">					
					<% for (let i = 0; i < product.comentarios.length; i++) { %> 

							<article>
								
								<a href="/users/profile/<%= product.comentarios[i].idUsuario %> ">
								<img src="<%=  product.comentarios[i].imagen %> " alt="">
								</a>
								<div class="data">
									<p class="user">
									<strong> <a href="/users/profile/<%= product.comentarios[i].idUsuario %> "> 
										<%= product.comentarios[i].usuarioQueComento %>
									</a> </strong>

									<%= product.comentarios[i].comentario %>
									</p>
								</div>
							</article>

				<% } %>

					</section>

					<form class="form" action="/" method="GET">
						<input class="form-input" type="text" value="" placeholder="Escribe aqui tu comentario">
						<button type="submit" class="buy-now-button"> AGREGAR COMENTARIO</button> 
					</form>

					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	
<%- include('./partials/footer') %>

</body>	
</html>