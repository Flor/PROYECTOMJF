<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	
	<% if (locals.user) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>


	<div class="container products-wrapper">
		
		<div class="d-flex align-items-center">

			<h2 class="products-title"> 
				 Buzo <%= result.marca + ' ' %> Modelo <%= result.modelo %>  
			</h2> 
			<h4>
				<a class="link" href="/users/profile/<%=result.user.id">Creado por: <%= result.user.nombre %></a>
			</h4>
			
		</div>

		<% if (locals.user) { %>
		<p class="product-detail-description">
			<a href="/product/add"> Agregar nuevo producto </a>
		</p>
		<% } %>

		<!-- solo si el usuario esta logueado y es el creador de este producto puede editarlo -->
		<p class="product-detail-description">
			<a href="/product/edit/<%= result.id %>"> Editar producto </a>
		</p>
		

		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<a href="/product/productEdit/<%= result.id %> ">
						<i class="fas fa-edit fa-4x"> </i> 
					</a> 
					<!--<img src="/images/<%=product.product_image %>" >-->
					<img src="<%= result.foto_producto%>" alt="" class="product-detail-img">
					<p class="product-detail-description"> Descripci√≥n: <%= result.descripcion %> </p>
				</article>

				<div class="col-12 col-lg-4">
				
				<section class="comments">					
					<% for (let i = 0; i < result.comment.length; i++) { %> 

							<article>
								
								<a href="/users/profile/<%= result.comment[i].id_Usuario %> ">
									<img src="<%=  result.comment[i].user.fotodeperfil %> " alt="">
								</a>
								<div class="data">
									<p class="user">
									<strong> <a href="/users/profile/<%= result.comment[i].id_Usuario %> "> 
										<%= result.comment[i].user.nombre %>
									</a> </strong>

									<%= result.comment[i].comentario %>
									</p>
								</div>
							</article>

				<% } %>

					</section>

					<form class="form" action="/" method="GET">
						<input class="form-input" type="text" value="" placeholder="Escribe aqui tu comentario">
						<button type="submit" class="buy-now-button"> AGREGAR COMENTARIO</button> 
					</form>

					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	
<%- include('./partials/footer') %>

</body>	
</html>